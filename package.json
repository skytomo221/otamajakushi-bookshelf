{
  "name": "otamajakushi-bookshelf",
  "version": "0.2.0",
  "description": "OTM-JSONファイルで書かれた辞書が開けるアプリ",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "eslint": "eslint ./src --fix",
    "start": "electron ./dist/main.js",
    "build": "cross-env NODE_ENV=\"development\" webpack",
    "package:mac": "cross-env NODE_ENV=\"production\" webpack && electron-builder --mac --x64",
    "package:windows": "cross-env NODE_ENV=\"production\" webpack && electron-builder --win --x64",
    "package:linux": "cross-env NODE_ENV=\"production\" webpack && electron-builder --linux --x64"
  },
  "build": {
    "productName": "Otamajakushi Bookshelf",
    "appId": "com.electron.otamashelf",
    "copyright": "Copyright © 2021-2022 skytomo",
    "files": [
      "dist/**/*",
      "!dist/*-unpacked/**/*"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "mac": {
      "icon": "src/assets/otamachan.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "src/assets/otamachan.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "src/assets/otamachan.png"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "skytomo",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mdi/font": "^5.9.55",
    "@mdi/js": "^5.9.55",
    "@mdi/react": "^1.5.0",
    "@mui/base": "^5.0.0-alpha.102",
    "@mui/icons-material": "^5.10.3",
    "@mui/material": "^5.10.4",
    "ajv": "^8.11.2",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.0",
    "events": "^3.3.0",
    "flat": "^5.0.2",
    "fp-ts": "^2.12.3",
    "get-port": "^6.1.2",
    "io-ts": "^2.2.18",
    "markdown-it": "^13.0.1",
    "mui-nested-menu": "^2.1.3",
    "notistack": "^2.0.5",
    "otamajakushi": "^1.2.0",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^17.0.2",
    "react-measure": "^2.5.2",
    "react-redux": "^7.2.4",
    "react-split": "^2.0.14",
    "react-window": "^1.8.6",
    "redux": "^4.1.0",
    "redux-saga": "^1.2.1",
    "ts-jest": "^29.0.1",
    "typed-redux-saga": "^1.5.0",
    "typescript-fsa": "^3.0.0",
    "typescript-fsa-reducers": "^1.2.2"
  },
  "devDependencies": {
    "@jambit/eslint-plugin-typed-redux-saga": "^0.4.0",
    "@types/flat": "^5.0.2",
    "@types/jest": "^29.0.3",
    "@types/markdown-it": "^12.2.3",
    "@types/material-ui": "^0.21.8",
    "@types/react": "^17.0.10",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "^17.0.7",
    "@types/react-measure": "^2.0.6",
    "@types/react-redux": "^7.1.16",
    "@types/react-window": "^1.8.3",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^10.4.12",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^18.3.7",
    "electron-builder": "^22.10.5",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.17",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.3.1",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
